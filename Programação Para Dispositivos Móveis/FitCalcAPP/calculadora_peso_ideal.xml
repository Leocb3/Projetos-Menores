<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFF">

    <!-- Título da Calculadora de Peso Ideal -->
    <TextView
        android:id="@+id/tituloCalculadoraPesoIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Peso Ideal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="24dp" />

    <!-- RadioGroup para seleção do sexo -->
    <RadioGroup
        android:id="@+id/grupoSexoPesoIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioMasculinoPesoIdeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioFemininoPesoIdeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino" />
    </RadioGroup>

    <!-- EditText para inserir a altura -->
    <EditText
        android:id="@+id/campoAlturaPesoIdeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira sua altura (em metros)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <!-- Botão para Calcular o Peso Ideal -->
    <Button
        android:id="@+id/botaoCalcularPesoIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginBottom="16dp" />

    <!-- TextView para exibir o resultado -->
    <TextView
        android:id="@+id/textoResultadoPesoIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginBottom="24dp" />

    <!-- Botão para Voltar -->
    <Button
        android:id="@+id/botaoVoltarPesoIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar" />
</LinearLayout>
